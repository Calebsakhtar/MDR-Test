# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset                  = utf-8
trim_trailing_whitespace = true
end_of_line              = lf
insert_final_newline     = true
tab_width                = 3
max_line_length          = 70

# Tab indentation (no size specified)
[Makefile]
indent_style = space

[*.{c,h,cpp,hpp}]
indent_size = 3
